{
  "manifest_version": 3,
  "name": "Medium to Freedium Redirect",
  "version": "1.0",
  "description": "Automatically redirects Medium pages to freedium.cfd for easier reading.",
  "homepage_url": "https://github.com/deepen-404/medium-to-freedium-extension",
  "action": {
    "default_title": "Medium Redirect"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*",
        "https://*.medium.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
